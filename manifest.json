{
    "manifest_version": 2,
    "name": "Simple Mark All as Read",
    "description": "Just mark all messages as read in current folder.",
    "version": "0.1",
    "author": "ugai",
    "applications": {
        "gecko": {
            "id": "ugai.sub1@gmail.com",
            "strict_min_version": "78.0"
        }
    },
    "browser_action": {
        "default_title": "Mark All as Read",
        "theme_icons": [{
            "light": "images/heroicons/mail-open-white.svg",
            "dark": "images/heroicons/mail-open-black.svg",
            "size": 32
        }]
    },
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "permissions": [
        "accountsRead",
        "messagesRead"
    ],
    "icons": {
        "64": "images/heroicons/mail-open.svg",
        "32": "images/heroicons/mail-open.svg",
        "16": "images/heroicons/mail-open.svg"
    }
}