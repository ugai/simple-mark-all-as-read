{
    "manifest_version": 2,
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "version": "0.4.0",
    "author": "ugai",
    "default_locale": "en",
    "applications": {
        "gecko": {
            "id": "ugai.sub1@gmail.com",
            "strict_min_version": "78.0"
        }
    },
    "browser_action": {
        "default_title": "__MSG_browserActionDefaultTitle__",
        "theme_icons": [{
            "light": "images/heroicons/mail-open-white.svg",
            "dark": "images/heroicons/mail-open-black.svg",
            "size": 32
        }]
    },
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "permissions": [
        "accountsRead",
        "messagesRead"
    ],
    "icons": {
        "64": "images/heroicons/mail-open.svg",
        "32": "images/heroicons/mail-open.svg",
        "16": "images/heroicons/mail-open.svg"
    }
}